@model IEnumerable<FYP_Blood.Models.Appointment>

@{
    ViewBag.Title = "donationHistory";
}


<head>
    <link href="~/Content/Css/donationHistory.css" rel="stylesheet" />
</head>

<div>
    @*<div style="margin-top:150px;font-weight:bold;font-size:20px;margin-left:500px;">-Donation History-</div>
        <div style="height:6px;"></div>*@
    @if (Model.Count() == 0)
    {
        <div>
            <div style="width: 500px; display: flex;margin-top:120px;">
                <img src="~/Content/images/NoDonationHistory.png" style="width:600px;margin-left:180px;">
            </div>

            <div style="font-weight: bold; font-family: 'Poppins',sans-serif; color: black; font-size: 23px; margin-left: 760px; margin-top: -250px; margin-bottom: 320px; ">
                Sorry, you don't have any donation history...

            </div>
        </div>
    }
    else
    {
        <table class="donationHistoryTable">
                <caption style="font-size: 21px; text-align: center; font-weight: bold; font-family: 'Poppins',sans-serif; color: black; caption-side: top;">-Donation History-</caption>
        
            <tr class="colName titlebackground">               
                <th class="context" style="width:180px;">DONATION DATE</th>
                <th class="context" style="width:180px;">DONATION TIME</th>
                <th class="context" style="width:400px;">DONATION LOCATION</th>
            </tr>


            @foreach (var appt in Model)
            {
                @*if (appt.e_location == null)
                    {
                        <tr class="colName">
                            <td class="context">hhh</td>
                            <td class="context">hhhh</td>
                            <td class="context">hhhhh</td>

                        </tr>
                    }
                    else
                    {*@
                <tr class="colName">
                    <td class="context">@appt.eventdate.ToString("dd MMM yyyy")</td>
                    <td class="context">@appt.apptTimeSlot</td>
                    <td class="context">@appt.e_location</td>

                </tr>
                @*}*@

            }

        </table>
    }


</div>
