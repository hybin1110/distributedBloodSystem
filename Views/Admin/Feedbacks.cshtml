
@{
    ViewBag.Title = "Feedbacks";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="main-content">
    <div class="container-fluid pb-4" >
        <div class="row p-3">
            <h3><span class="authority-title">Site Feedbacks</span></h3>
            <span class="authority-desc fw-bolder">Feedbacks Listing</span>
        </div>
        <div class="card shadow mb-4 col-10 m-2" ng-repeat="feedbacks in fbrecords">
            <div class="card-header py-3" style="background-color: #f8f9fc;">
                <h6 class="m-0 font-weight-bold" style="color: #4b7dab">{{feedbacks.email}}<span class="d-flex justify-content-end align-items-start" style="color: #696969; ">{{feedbacks.date}}</span></h6>
            </div>
            <div class="card-body">
                {{feedbacks.message}}<br /><br />
                BY: {{feedbacks.firstname}},{{feedbacks.lastname}}<br /><br />
            </div>
        </div>
    </div>
</div>

